@model IEnumerable<Vidly.Models.Movies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (!Model.Any())
{
    <p>No Movies Available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Movies</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var movie in Model)
            {
                <tr>
                    <td scope="row">@Html.ActionLink(movie.Name, "Show", "Movies", new { id = movie.Id }, null)</td>
                </tr>            
            }
        </tbody>
    </table>
}

