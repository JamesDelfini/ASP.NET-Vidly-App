@model Vidly.ViewModels.RandomViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is a comment in multiple lines.
*@

@{ 
    var isPopular = Model.Customers.Count > 5 ? "popular" : null;
}
<h2 class="@isPopular">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie.</text>
    <!-- use p property or text-->
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}